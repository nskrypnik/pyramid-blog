<!DOCTYPE HTML>
<html>
<head>

    <meta name="y_key" content="fae7a18089d8b6cf" />
    <meta name="msvalidate.01" content="1A87C5AF22BE7D7F6B5A1F8D3CC471D6" />
    <meta http-equiv="content-type" content="text/html; charset=UTF-8">
    <meta name="author" content="Niko Skrypnik">
    <meta name="description" content="{% block metadescription %}{{g.siteinfo}}{% endblock %}">
    <meta name="keywords" content="Niko Skrypnil's blog about python, web and IT">
    <link rel="image_src" href="{{resource('images', 'blogs', 'avatar-xbox-grande.png')}}" />
    <link rel="shortcut icon" href="{{resource('images', 'layouts', 'favicon.ico')}}">
    <link rel="alternate" type="application/rss+xml" href="/feeds" title="RSS Blog">
    <link rel="alternate" type="application/rss+xml" href="/feeds/articles" title="RSS Artigos">
    <link rel="alternate" type="application/rss+xml" href="/feeds/snippets" title="RSS Snippets">

    <title>{% block pagetitle %}{% endblock %}Niko's blog</title>
    {% include "/includes/header_imports.jinja2" %}
    {{h.stylesheet_link(resource('css', 'blog.css'))}}
    {{h.stylesheet_link(resource('css', 'pygments', 'pygments_tango.css'))}}
    {{h.javascript_link('https://apis.google.com/js/plusone.js')}}
    {{h.javascript_link('http://connect.facebook.net/en_US/all.js#xfbml=1')}}

    <script type="text/javascript" >
        $(document).ready(function() {
            $('a[rel="tip-left"]').twipsy({title:'alt', placement:'left'});
        });
    </script>

    {% if request.server_port != 6543 and 'user_id' not in request.session and request.path != '/users/login' %}
        <script type="text/javascript">

          var _gaq = _gaq || [];
          _gaq.push(['_setAccount', 'UA-35799591-1']);
          _gaq.push(['_trackPageview']);

          (function() {
            var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
            ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
            var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
          })();

        </script>
    {% endif %}
</head>

<body>
    {% include "/includes/flash.jinja2" %}
    
    <div id="blog-wrap">
        {% include "/includes/header.jinja2" %}

        <div id="blog-main" class="container">
            <div class="row">
                <div id="blog-content-wrap" class="span12">
                    {% block content %}

                    {% endblock %}
                </div>

                <div id="blog-sidebar" class="span4">
                    {% include "/includes/sidebar.jinja2" %}
                </div>
            </div>
        </div>

    </div>

    {% include "/includes/footer.jinja2" %}

</body>
</html>
